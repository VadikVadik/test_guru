<%= form_with url: users_feedback_path, local: true do |form| %>
  <%= render 'shared/errors', resource: @user  %>

  <div class="form-group">
    <p><%= form.label :email %>
    <%= form.email_field :email, id: :email, value: @user.email, class: 'form-control'  %></p>
    <p><%= form.label :message, t('.message') %>
    <%= form.text_area :message, id: :message, class: 'form-control'  %></p>
  </div>

  <p><%= form.submit t('.submit'), class: 'btn btn-primary' %></p>
<% end %>
