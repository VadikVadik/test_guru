<%= form_with model: [@question, @answer], locale: true do |form| %>
  <%= render 'shared/errors', resource: @answer %>
  <div class="actions">
    <p>
      <%= form.label :body, "Answer:" %>
      <%= form.text_area :body, id: :answer_body, rows: 7, cols: 60  %>
    </p>
    <p>
      <%= form.label :correct %>
      <%= form.check_box :correct, id: :answer_correct  %>
    </p>
    <p><%= form.submit %></p>
  </div>
<% end %>
