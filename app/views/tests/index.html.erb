  <div class="col col-md-10">
    <div>
      <h1><%= t('tests.index.header') %></h1>

      <table class="table table-hover">
        <tr class="table-dark">
          <th class="sort-by-title pointer">
            <%= t('.title') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th><%= t('.category') %></th>
          <th><%= t('.level') %></th>
          <th><%= t('.questions') %></th>
          <th><%= t('.action') %></th>
        </tr>
        <%= render @tests %>
      </table>
    </div>
    <div class="">
      <h2><%= t('.badges') %></h2>
      <div class="">
        <%= link_to t('.all_badges'), badges_path %>
      </div>
      <div class="">
        <%= link_to t('.current_badges'), users_badges_path %>
      </div>
    </div>
  </div>
</div>
